{
  "manifest_version": 3,
  "name": "DevInks",
  "version": "1.0",
  "description": "Web-Linked Notes For Developers: Create and save notes and code snippets tied to specific websites for future reference.",
  "action": {
    "default_popup": "src/entry.html",
    "default_icon": "src/assets/DevInks.png"
  },
  "permissions": ["storage", "tabs"],
  "content_security_policy": {
  "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "background": {
    "service_worker": "src/js/background.js"
  }
}
